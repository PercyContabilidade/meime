    <!-- Scripts da Aplicação -->
    <script>
        // Inicializar ícones
        lucide.createIcons();

        // Estado
        let revenue = 5000;
        let employees = 0;
        
        // Dados de Comparação
        const comparisonData = [
            { id: 1, feature: "Limite de Faturamento", mei: "R$ 81.000,00/ano", me: "Até R$ 4,8 Milhões", icon: "dollar-sign", details: "MEI tem teto baixo. Acima de R$ 6.750/mês, a ME é obrigatória." },
            { id: 2, feature: "Impostos", mei: "Fixo (~R$ 75,00)", me: "Variável (a partir de 6%)", icon: "file-text", details: "MEI paga o mesmo valor sempre. ME paga proporcional ao faturamento no Anexo III." },
            { id: 3, feature: "Funcionários", mei: "Máximo 1", me: "Sem limite fixo", icon: "users", details: "Para crescer a equipe, você precisa migrar para ME." },
            { id: 4, feature: "Contador", mei: "Opcional", me: "Obrigatório por Lei", icon: "briefcase", details: "A Percy Contabilidade cuida de toda a burocracia da sua ME." },
            { id: 5, feature: "Atividades", mei: "Limitadas (Lista)", me: "Abrangente (Intelectuais)", icon: "check-circle", details: "Médicos, advogados, programadores e consultores geralmente devem ser ME." }
        ];

        // Elementos DOM
        const revenueInput = document.getElementById('revenueInput');
        const revenueSlider = document.getElementById('revenueSlider');
        const employeeCount = document.getElementById('employeeCount');
        const meiCard = document.getElementById('meiCard');
        const meiBadge = document.getElementById('meiBadge');
        const meiContent = document.getElementById('meiContent');
        const meTotal = document.getElementById('meTotal');
        const meTax = document.getElementById('meTax');

        // Formatador de Moeda
        const formatCurrency = (val) => new Intl.NumberFormat('pt-BR', { style: 'currency', currency: 'BRL' }).format(val);

        // Lógica de Cálculo
        function calculate() {
            // Sincronizar inputs
            revenueInput.value = revenue;
            revenueSlider.value = revenue;
            employeeCount.textContent = employees;

            const yearlyRevenue = revenue * 12;
            const isMeiEligible = yearlyRevenue <= 81000 && employees <= 1;
            
            // Cálculos ME
            // Estimativa simples de 6% (Anexo III)
            const meTaxVal = revenue * 0.06;
            const meTotalVal = meTaxVal + 450; // + honorários estimados

            // Atualizar UI ME
            meTax.textContent = formatCurrency(meTaxVal);
            meTotal.textContent = formatCurrency(meTotalVal);

            // Atualizar UI MEI
            if (isMeiEligible) {
                meiCard.className = "p-4 rounded-lg border-2 bg-white border-emerald-200 transition-all duration-300 shadow-sm";
                meiBadge.className = "bg-emerald-100 text-emerald-700 text-xs px-2 py-1 rounded-full font-bold";
                meiBadge.textContent = "ELEGÍVEL";
                meiContent.innerHTML = `
                    <div class="text-3xl font-bold text-slate-800 mb-1">
                        ~R$ 75,00<span class="text-xs font-normal text-slate-500 ml-1">/mês</span>
                    </div>
                    <p class="text-sm text-slate-500 mb-4 font-medium">Custo fixo (DAS)</p>
                    <ul class="text-xs space-y-2 text-slate-600">
                        <li class="flex items-center gap-2"><i data-lucide="check-circle" class="w-4 h-4 text-emerald-500"></i> Baixa burocracia</li>
                        <li class="flex items-center gap-2"><i data-lucide="check-circle" class="w-4 h-4 text-emerald-500"></i> Sem contador obrigatório</li>
                    </ul>
                `;
            } else {
                meiCard.className = "p-4 rounded-lg border-2 bg-red-50 border-red-100 opacity-70 transition-all duration-300";
                meiBadge.className = "bg-red-100 text-red-700 text-xs px-2 py-1 rounded-full font-bold";
                meiBadge.textContent = "INAPTO";
                meiContent.innerHTML = `
                    <div class="text-center py-6">
                        <i data-lucide="alert-triangle" class="w-10 h-10 text-red-400 mx-auto mb-3"></i>
                        <p class="text-sm text-red-700 font-bold mb-1">
                            ${yearlyRevenue > 81000 ? "Faturamento excede 81k/ano" : "Máximo de 1 funcionário"}
                        </p>
                        <p class="text-xs text-slate-500">Migração para ME recomendada.</p>
                    </div>
                `;
            }
            lucide.createIcons();
        }

        // Event Listeners
        revenueInput.addEventListener('input', (e) => { revenue = Number(e.target.value); calculate(); });
        revenueSlider.addEventListener('input', (e) => { revenue = Number(e.target.value); calculate(); });
        
        function updateEmployees(change) {
            employees = Math.max(0, employees + change);
            calculate();
        }

        // Renderização da Tabela/Cards
        function renderComparison() {
            const tbody = document.getElementById('tableBody');
            const cardsContainer = document.getElementById('cardsView');
            
            // Render Tabela
            tbody.innerHTML = comparisonData.map(row => `
                <tr class="hover:bg-slate-50 transition-colors cursor-pointer group border-b border-slate-50" onclick="toggleDetails(${row.id})">
                    <td class="p-4 font-bold text-slate-700 flex items-center gap-3">
                        <div class="p-1.5 bg-slate-100 rounded text-emerald-600 group-hover:bg-emerald-100 transition-colors">
                            <i data-lucide="${row.icon}" class="w-4 h-4"></i>
                        </div>
                        ${row.feature}
                        <i data-lucide="chevron-down" class="w-3 h-3 text-slate-300 group-hover:text-emerald-500 ml-auto transition-transform" id="icon-${row.id}"></i>
                    </td>
                    <td class="p-4 text-slate-600 border-l border-slate-100 text-sm">${row.mei}</td>
                    <td class="p-4 text-slate-600 font-bold text-emerald-700 border-l border-slate-100 text-sm">${row.me}</td>
                </tr>
                <tr id="details-${row.id}" class="hidden bg-emerald-50/50 border-b border-emerald-100">
                    <td colSpan="3" class="p-4 text-sm text-slate-600 border-t border-slate-100">
                        <div class="flex gap-3 items-start">
                            <i data-lucide="info" class="w-5 h-5 text-emerald-500 shrink-0 mt-0.5"></i>
                            <span class="leading-relaxed">${row.details}</span>
                        </div>
                    </td>
                </tr>
            `).join('');

            // Render Cards
            cardsContainer.innerHTML = comparisonData.map(item => `
                <div class="bg-white rounded-xl shadow-lg border border-slate-100 p-6 hover:shadow-xl transition-shadow border-t-4 border-t-emerald-500 flex flex-col h-full">
                    <div class="flex items-center gap-3 mb-4">
                        <div class="p-2 bg-emerald-100 rounded-lg">
                            <i data-lucide="${item.icon}" class="w-6 h-6 text-emerald-600"></i>
                        </div>
                        <h3 class="font-bold text-lg text-slate-800">${item.feature}</h3>
                    </div>
                    <div class="space-y-4 flex-grow">
                        <div>
                            <p class="text-[10px] uppercase tracking-wider text-slate-400 font-bold mb-1">No MEI</p>
                            <p class="text-slate-700 font-medium">${item.mei}</p>
                        </div>
                        <div class="pt-3 border-t border-slate-100">
                            <p class="text-[10px] uppercase tracking-wider text-slate-400 font-bold mb-1">Na ME</p>
                            <p class="text-emerald-700 font-bold">${item.me}</p>
                        </div>
                    </div>
                    <div class="mt-4 pt-4 border-t border-slate-100 text-sm text-slate-500 leading-relaxed">
                        ${item.details}
                    </div>
                </div>
            `).join('');
            
            lucide.createIcons();
        }

        function toggleDetails(id) {
            const el = document.getElementById(`details-${id}`);
            const icon = document.getElementById(`icon-${id}`);
            
            // Toggle visibility
            el.classList.toggle('hidden');
            
            // Rotate icon (simples visual cue)
            if (el.classList.contains('hidden')) {
                icon.style.transform = 'rotate(0deg)';
            } else {
                icon.style.transform = 'rotate(180deg)';
            }
        }

        function switchView(mode) {
            const tableView = document.getElementById('tableView');
            const cardsView = document.getElementById('cardsView');
            const btnTable = document.getElementById('btnTable');
            const btnCards = document.getElementById('btnCards');

            if (mode === 'table') {
                tableView.classList.remove('hidden');
                cardsView.classList.add('hidden');
                btnTable.className = "px-4 py-2 rounded-md flex items-center gap-2 text-sm font-bold transition-all bg-white text-emerald-600 shadow-sm";
                btnCards.className = "px-4 py-2 rounded-md flex items-center gap-2 text-sm font-bold transition-all text-slate-500 hover:text-emerald-600";
            } else {
                tableView.classList.add('hidden');
                cardsView.classList.remove('hidden');
                btnTable.className = "px-4 py-2 rounded-md flex items-center gap-2 text-sm font-bold transition-all text-slate-500 hover:text-emerald-600";
                btnCards.className = "px-4 py-2 rounded-md flex items-center gap-2 text-sm font-bold transition-all bg-white text-emerald-600 shadow-sm";
            }
        }

        // Inicialização
        calculate();
        renderComparison();

    </script>
</body>
</html>
